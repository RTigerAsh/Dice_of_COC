<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/wrap_layout"
    android:padding="10sp"
    android:orientation="vertical">
    <!--android:background="@drawable/dialog_bg">-->
    <!--对话框标题区域-->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/layout_title"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="25sp"
            android:padding="7sp"
            android:text="11111"
            android:textColor="@color/black"
            android:gravity="center"/>

    </RelativeLayout>

    <View style="@style/bg_line"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
        android:padding="12sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="需要技能"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/dialog_skillText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/holo_green_light"
            android:text="23333333"
            android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="伤害"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/dialog_damageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:text="23333333"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="基础射程"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/dialog_limit1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:text="23333333"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="每轮"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/dialog_vartime1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:text="23333333"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="弹数"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/dialog_numText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:text="23333333"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="价格($)"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/dialog_priceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:text="23333333"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="故障点数"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/dialog_faultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:text="23333333"
                android:textSize="15sp" />

        </LinearLayout>

        <View style="@style/bg_line"/>

        <LinearLayout
            android:padding="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="时代"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/dialog_timeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/holo_green_light"
                android:text="23333333"
                android:textSize="15sp" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>