                    android:textSize="11sp"/>

            </LinearLayout>


        </LinearLayout>
        <View style="@style/bg_line"/>

        <!--体型-->
        <LinearLayout
            android:padding="12sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

