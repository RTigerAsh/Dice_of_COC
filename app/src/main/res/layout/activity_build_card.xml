                    android:gravity="center"
                    android:text="56"
                    android:textSize="11sp"/>

            </LinearLayout>


        </LinearLayout>
        <View style="@style/bg_line"/>

        <!--智力-->
        <LinearLayout
            android:padding="12sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="智力(INT)"
                android:layout_width="match_parent"
