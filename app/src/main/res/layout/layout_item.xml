<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/weaponName"
        android:layout_height="50dp"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="AAAAAAAAA"
        android:background="@drawable/single_layout_selector"
        android:drawableRight="@drawable/setting_arrow"
        />
    <TextView
        android:id="@+id/weaponSkills"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/weaponDamage"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/weaponLimit1"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/weaponVartime"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/weaponNum"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/weaponPrice"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/weaponFault"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/weaponTime"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</LinearLayout>